# 服务器配置
PORT=3000
HOST=localhost
NODE_ENV=development

# CORS 配置
CORS_ORIGIN=http://localhost:8080

# 请求频率限制
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=text/plain,text/markdown,audio/mpeg,audio/wav,audio/x-m4a

# 数据存储路径
DATA_PATH=./data

# AI 模型配置
AI_MODEL_PATH=./ai-models
AI_MODEL_TIMEOUT=30000

# TTS 配置
TTS_OUTPUT_PATH=./data/audio
TTS_MAX_DURATION=600

# 字幕配置
SUBTITLE_OUTPUT_PATH=./data/subtitles
SUBTITLE_ENCODING=utf-8

# 文件输出配置
FILE_OUTPUT_PATH=./data/output
FILE_TEMP_PATH=./data/temp

# 日志配置
LOG_LEVEL=info
LOG_PATH=./logs

# 安全配置
JWT_SECRET=your-secret-key-here
SESSION_SECRET=your-session-secret-here

