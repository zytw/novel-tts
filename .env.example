# Docker环境变量配置文件
# 复制此文件为 .env 并填入实际值

# 加密密钥（用于API密钥加密存储）
ENCRYPTION_KEY=your_32_character_encryption_key_here

# 数据库配置（如果需要）
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ai_novel
# DB_USER=postgres
# DB_PASSWORD=your_password

# Redis配置（可选）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# 日志级别
LOG_LEVEL=info

# 域名配置
DOMAIN=localhost
PROTOCOL=http

# API限制
# API_RATE_LIMIT=100
# API_RATE_WINDOW=900000

# 文件存储配置
# UPLOAD_MAX_SIZE=50MB
# STORAGE_TYPE=local